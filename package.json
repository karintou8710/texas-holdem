  "homepage": "https://github.com/karintou8710/poker#readme",
  "bugs": {
    "url": "https://github.com/karintou8710/poker/issues"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
