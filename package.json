{
  "name": "@karintou8710/poker",
  "version": "1.0.0",
  "description": "A high-performance TypeScript poker hand evaluator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
